@model List<PostVm>
@{
  ViewData["Title"] = "Gerenciar Posts";
}
<div class="container">
  <div class="clearfix my-3">
    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-success float-start">< VOLTAR</a>
    <a asp-action="Create" class="btn btn-success float-end">CRIAR POST</a>
  </div>

  <h2 class="my-2">Posts Publicados</h2>

  <div class="table-responsive small">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col" class="text-center">CRIADO EM</th>
          <th scope="col">TÍTULO</th>
          <th scope="col">AUTOR</th>
          <th scope="col" class="text-center">ALTERADO EM</th>
          <th scope="col" class="text-center">#</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var post in Model){
          <tr>
            <th class ="text-center" scope="row">@post.CriadoEm.ToShortDateString()</th>
            <td>@post.Titulo</td>
            <td>@post.Autor?.UserName</td>
            <td class="text-center"> @post.AlteradoEm?.ToShortDateString()</td>
            <td class="text-center">
              <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-warning mx-1" title="Editar"><i class="bi bi-pencil"></i></a>
              <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-sm btn-danger" title="Excluir"><i class="bi bi-trash"></i></a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>