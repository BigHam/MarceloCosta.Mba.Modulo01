@model ComentarioVm
@{
  ViewData["Title"] = "Editar Comentario";
}

<div class="container">
  <div class="row">
    <div class="clearfix my-3">
      <a asp-area="" asp-controller="Comentarios" asp-action="Visualizar" asp-route-postId="@Model.PostId" class="btn btn-success float-start btn-w-padrao">< VOLTAR</a>
    </div>

    <div class="col-lg-12">
      <div class="card text-white bg-success mt-3">
        <div class="card-header">Editando o seu comentário</div>
        <div class="card-body">
          <form asp-controller="Comentarios" asp-action="Editar" asp-route-postId="@Model.PostId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
              <input type="hidden" asp-for="Id" />
              <input type="hidden" asp-for="PostId" />
              <input type="hidden" asp-for="AutorId" />
              <input type="hidden" asp-for="CriadoEm" />
              <input type="hidden" asp-for="AlteradoEm" />
              <input type="hidden" asp-for="Excluido" />
              <textarea asp-for="Conteudo" class="form-control w-100" rows="20" placeholder="Deixe seu comentário aqui..."></textarea>
              <span asp-validation-for="Conteudo" class="text-danger mt-1"></span>
            </div>
            <input type="submit" value="ATUALIZAR" class="btn btn-primary mt-3 float-end btn-w-padrao" />
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
